{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://YOUR_BACKEND_URL/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization"
      }
    },
    {
      "src": "/data/(.*)",
      "dest": "https://YOUR_BACKEND_URL/data/$1"
    },
    {
      "src": "/download/(.*)",
      "dest": "https://YOUR_BACKEND_URL/download/$1"
    },
    {
      "src": "/analysis/(.*)",
      "dest": "https://YOUR_BACKEND_URL/analysis/$1"
    },
    {
      "src": "/converter/(.*)",
      "dest": "https://YOUR_BACKEND_URL/converter/$1"
    },
    {
      "src": "/settings/(.*)",
      "dest": "https://YOUR_BACKEND_URL/settings/$1"
    },
    {
      "src": "/tasks/(.*)",
      "dest": "https://YOUR_BACKEND_URL/tasks/$1"
    },
    {
      "src": "/api-keys/(.*)",
      "dest": "https://YOUR_BACKEND_URL/api-keys/$1"
    },
    {
      "src": "/health",
      "dest": "https://YOUR_BACKEND_URL/health"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "https://YOUR_BACKEND_URL/socket.io/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "REDLINE_BACKEND_URL": "https://YOUR_BACKEND_URL"
  },
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.9",
      "maxDuration": 30
    }
  }
}

