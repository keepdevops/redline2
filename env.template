# REDLINE Security Configuration Template
# Copy this file to .env and set secure values

# Flask Secret Key (REQUIRED - Generate a secure random key)
SECRET_KEY=your-secure-secret-key-here

# CORS Origins (comma-separated list of allowed origins)
# Default: localhost only for security
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# VNC Password (REQUIRED for Docker GUI)
# Generate a strong password: openssl rand -base64 32
VNC_PASSWORD=your-secure-vnc-password-here

# License Server Secret Key (for licensing system)
LICENSE_SECRET_KEY=your-license-secret-key-here

# API Keys (optional - add your own keys)
ALPHA_VANTAGE_API_KEY=
FINNHUB_API_KEY=
IEX_CLOUD_API_KEY=

# Database Configuration
DATABASE_URL=sqlite:///redline_data.db

# Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Security Headers
SECURE_HEADERS=true
CONTENT_SECURITY_POLICY=true

# Development vs Production
FLASK_ENV=production
DEBUG=false
