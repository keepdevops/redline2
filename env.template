# REDLINE Security Configuration Template
# Copy this file to .env and set secure values

# Flask Secret Key (REQUIRED - Generate a secure random key)
SECRET_KEY=your-secure-secret-key-here

# CORS Origins (comma-separated list of allowed origins)
# Default: localhost only for security
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# VNC Password (REQUIRED for Docker GUI)
# Generate a strong password: openssl rand -base64 32
VNC_PASSWORD=your-secure-vnc-password-here

# License Server Secret Key (for licensing system)
LICENSE_SECRET_KEY=your-license-secret-key-here

# API Keys (optional - add your own keys)
ALPHA_VANTAGE_API_KEY=
FINNHUB_API_KEY=
IEX_CLOUD_API_KEY=

# Database Configuration
DATABASE_URL=sqlite:///redline_data.db

# Upload Configuration
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes

# Security Headers
SECURE_HEADERS=true
CONTENT_SECURITY_POLICY=true

# Development vs Production
FLASK_ENV=production
DEBUG=false

# Payment Configuration (Stripe)
# Get these from https://dashboard.stripe.com/test/apikeys (Test mode)
# See STRIPE_SETUP_GUIDE.md for detailed instructions
STRIPE_SECRET_KEY=sk_test_your-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here
# Webhook secret: Get from Stripe CLI (stripe listen) or Stripe Dashboard webhook endpoint
# See STRIPE_WEBHOOK_SETUP.md for setup instructions
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
HOURS_PER_DOLLAR=0.2  # 1 hour = $5 (0.2 hours per dollar)
PAYMENT_CURRENCY=usd

# License Server Configuration
LICENSE_SERVER_URL=http://localhost:5001

# Access Control
ENFORCE_PAYMENT=true  # Block access when hours are 0 (set to false to allow access without payment)
REQUIRE_LICENSE_SERVER=false  # If true, block access when license server is unavailable

# Usage Tracking
USAGE_CHECK_INTERVAL=300  # Check and deduct hours every 5 minutes (in seconds)

# User Data Storage
# Local storage (default)
USER_STORAGE_BASE_PATH=./data/users

# S3 Cloud Storage (optional)
USE_S3_STORAGE=false
S3_BUCKET=your-s3-bucket-name
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Email Configuration (for sending license keys)
SMTP_ENABLED=false  # Set to true to enable email sending
SMTP_SERVER=smtp.gmail.com  # Gmail SMTP server
SMTP_PORT=587  # TLS port
SMTP_USER=your-email@gmail.com  # Your email address
SMTP_PASSWORD=your-app-password  # App-specific password (not regular password)
FROM_EMAIL=your-email@gmail.com  # From address (usually same as SMTP_USER)
