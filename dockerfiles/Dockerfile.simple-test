# REDLINE Web GUI - Simple Test Dockerfile (BuildKit-Free)
# Ubuntu 24.04 LTS with default Python 3.12 - minimal test version

FROM ubuntu:24.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Set working directory
WORKDIR /opt/redline

# Install system dependencies and default Python 3.12
RUN apt-get update && apt-get install -y \
    python3 \
    python3-dev \
    python3-pip \
    python3-venv \
    curl \
    wget \
    git \
    build-essential \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Show Python and pip versions
RUN python3 --version && python3 -m pip --version

# Copy simple requirements file
COPY requirements-simple.txt /opt/redline/

# Install Python packages using default Python 3
RUN python3 -m pip install -r /opt/redline/requirements-simple.txt

# Copy application code
COPY . /opt/redline/

# Create necessary directories
RUN mkdir -p /opt/redline/data /opt/redline/logs

# Expose port
EXPOSE 8080

# Default command - run minimal Flask test with default Python
CMD ["python3", "web_app_minimal.py"]
