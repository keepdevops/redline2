# REDLINE Web GUI - Conservative Python 3.9 Dockerfile
# Uses conservative package versions for maximum compatibility

FROM ubuntu:24.04

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1
ENV PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /opt/redline

# Install system dependencies and Python 3.9
RUN apt-get update && apt-get install -y \
    software-properties-common \
    curl \
    wget \
    git \
    build-essential \
    libffi-dev \
    libssl-dev \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Add deadsnakes PPA for Python 3.9
RUN add-apt-repository ppa:deadsnakes/ppa && \
    apt-get update && \
    apt-get install -y \
    python3.9 \
    python3.9-dev \
    python3.9-venv \
    python3.9-distutils \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install pip for Python 3.9
RUN curl -sS https://bootstrap.pypa.io/get-pip.py | python3.9

# Show Python and pip versions
RUN python3.9 --version && python3.9 -m pip --version

# Copy conservative requirements file
COPY requirements-conservative-python39.txt /opt/redline/

# Install Python packages with verbose output and error handling
RUN python3.9 -m pip install --upgrade pip setuptools wheel && \
    python3.9 -m pip install -r /opt/redline/requirements-conservative-python39.txt --verbose

# Copy application code
COPY . /opt/redline/

# Create necessary directories
RUN mkdir -p /opt/redline/data /opt/redline/logs

# Expose port
EXPOSE 8080

# Default command - run Flask with Python 3.9
CMD ["python3.9", "web_app_minimal.py"]
