# REDLINE Package Manifest
# Include essential files for PyPI distribution

# Core files
include requirements.txt
include README.md
include LICENSE
include data_config.ini
include main.py
include web_app.py
include pyproject.toml
include setup.py

# Version information
include redline/__version__.py

# Web application files
recursive-include redline/web/static *
recursive-include redline/web/templates *

# Core package files
recursive-include redline *.py
recursive-include redline/core *.py
recursive-include redline/gui *.py
recursive-include redline/cli *.py
recursive-include redline/database *.py
recursive-include redline/downloaders *.py
recursive-include redline/utils *.py
recursive-include redline/analysis *.py
recursive-include redline/updates *.py

# Licensing system
recursive-include licensing *.py
recursive-include licensing/server *.py
recursive-include licensing/client *.py

# Build and distribution files
recursive-include build/specs *.spec
recursive-include build/scripts *.sh
recursive-include scripts *.py

# Documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.txt

# Exclude development and build artifacts
exclude .gitignore
exclude .github/workflows/*.yml
exclude .github/workflows/*.yaml
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * *.dylib
recursive-exclude * *.dll
recursive-exclude * .DS_Store
recursive-exclude * Thumbs.db
recursive-exclude * .pytest_cache
recursive-exclude * .coverage
recursive-exclude * .mypy_cache
recursive-exclude * .tox
recursive-exclude * .venv
recursive-exclude * build
recursive-exclude * dist
recursive-exclude * *.egg-info
recursive-exclude * .eggs
recursive-exclude * .git
recursive-exclude * .github
recursive-exclude * tests
recursive-exclude * test_*
recursive-exclude * *_test.py
recursive-exclude * .env
recursive-exclude * .env.*
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.log
recursive-exclude * *.tmp
recursive-exclude * *.temp
