# Ultra-minimal Dockerfile for debugging pip issues
FROM ubuntu:24.04

# Install Python 3.11 and basic dependencies
RUN apt-get update && apt-get install -y \
    software-properties-common \
    && add-apt-repository ppa:deadsnakes/ppa \
    && apt-get update && apt-get install -y \
    python3.11 \
    python3.11-dev \
    python3.11-venv \
    python3-pip \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.11 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.11 1 && \
    update-alternatives --install /usr/bin/python python /usr/bin/python3.11 1

# Verify Python version
RUN python3 --version

# Create app directory
WORKDIR /opt/redline

# Upgrade pip first
RUN python3 -m pip install --upgrade pip

# Install packages one by one to identify the problem
RUN python3 -m pip install Flask==3.0.0
RUN python3 -m pip install Werkzeug==3.0.1
RUN python3 -m pip install pandas==2.0.3
RUN python3 -m pip install numpy==1.24.3
RUN python3 -m pip install requests==2.31.0

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p data logs config

# Expose port
EXPOSE 8080

# Simple command - just run Flask directly
CMD ["python3", "web_app.py"]
